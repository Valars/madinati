<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuPrincipal"
    android:background="#00000000"
    android:gravity="center">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <GridLayout
            android:layout_width="338dp"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:layout_alignWithParentIfMissing="false"
            android:rowCount="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Formulairebutton"
                android:src="@drawable/logonewprob"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contextClickable="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnProblemsInCarte"
                android:src="@drawable/logomaps"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contextClickable="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/logomyproblems"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contextClickable="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bSettings"
                android:src="@drawable/logosettings"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contextClickable="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bLogOut"
                android:src="@drawable/logoout"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contextClickable="true" />

        </GridLayout>
    </ScrollView>

</RelativeLayout>
